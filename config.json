{
  "database": {
    "type": "postgresql",
    "url": "postgresql://postgres:postgres@localhost:5432/face_recognition",
    "pool_size": 20,
    "max_overflow": 40,
    "pool_timeout": 30,
    "pool_recycle": 3600
  },
  "face_recognition": {
    "recognition_threshold": 0.35,
    "detection_threshold": 0.4,
    "model": "buffalo_l",
    "deepface_model": "ArcFace",
    "det_size": [
      640,
      640
    ],
    "providers": [
      "CPUExecutionProvider"
    ],
    "duplicate_threshold": 0.60,
    "enable_cache": true,
    "cache_limit": 5000,
    "batch_size": 500
  },
  "api": {
    "host": "0.0.0.0",
    "port": 8000,
    "debug": false
  },
  "upload": {
    "max_file_size": 16777216,
    "allowed_extensions": [
      "jpg",
      "jpeg",
      "png",
      "bmp",
      "tiff",
      "gif",
      "webp",
      "avif",
      "heic"
    ],
    "upload_folder": "data/uploads"
  },
  "logging": {
    "level": "INFO",
    "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s"
  },
  "models": {
    "insightface_root": "models/insightface",
    "deepface_root": "models/deepface",
    "cache_dir": "models/cache",
    "unified_management": true,
    "auto_migrate": true
  }
}